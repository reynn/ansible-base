FROM fedora:25

WORKDIR /ansible

ENV ANSIBLE_VERSION 2.3.0.0

RUN dnf install -vy \
      python \
      libffi-devel \
      openssl-devel \
      python-devel \
      redhat-rpm-config \
      gcc \
    && pip install --upgrade pip ansible==${ANSIBLE_VERSION} \
    && dnf remove -y gcc \
      openssl-devel \
      python-devel

ENTRYPOINT [ "ansible" ]
